package com.cts.repositroy;

import java.util.List;
import java.util.Optional;

import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.CrudRepository;
import org.springframework.data.repository.query.Param;

import com.cts.beans.Users;

public interface LoginRepository extends CrudRepository<Users, String>{

	Optional<Users> findById(int id);
	
	@Query("select u from users where u.email=mail")
	List<Users> findByEmail(@Param("mail")String email);

}